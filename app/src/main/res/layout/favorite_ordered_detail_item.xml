<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dip"
    android:padding="10dp"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ImageView
            android:id="@+id/odi_photo"
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:layout_marginTop="15dip"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/odi_name"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_toRightOf="@+id/odi_photo"
            android:layout_marginLeft="20dip"
            android:textStyle="bold"
            android:text="메뉴 이름"
            android:textSize="40px"
            android:textColor="@color/darkblue"/>

        <TextView
            android:id="@+id/odi_price"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_toRightOf="@+id/odi_photo"
            android:layout_below="@+id/odi_name"
            android:layout_marginLeft="20dip"
            android:textStyle="bold"
            android:text="메뉴 가격"
            android:textSize="30px"
            android:textColor="@color/darkblue"/>
        <TextView
            android:id="@+id/odi_amount_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/odi_price"
            android:layout_toEndOf="@id/odi_price"
            android:layout_marginTop="20dip"
            android:layout_marginLeft="90dp"
            android:textSize="80px"
            android:text="x"/>
        <TextView
            android:id="@+id/odi_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="90px"
            android:text="5"
            android:layout_marginTop="20dip"
            android:layout_toRightOf="@+id/odi_amount_t"
            android:layout_toEndOf="@id/odi_amount_t"/>
    </RelativeLayout>


</LinearLayout>