<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/store_info"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.02">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkblue"
                android:textStyle="bold"
                android:text="전화 번호 : 010-0000-0000"
                android:id="@+id/s_Tel"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkblue"
                android:textStyle="bold"
                android:text="주소 : 서울시 정릉동 서경대학교"
                android:layout_below="@+id/s_Tel"
                android:id="@+id/s_Addr"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkblue"
                android:textStyle="bold"
                android:text="영업 시간 : 09시 ~21시"
                android:layout_below="@+id/s_Addr"
                android:id="@+id/s_Time"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.02">

        <Button
            android:id="@+id/btn1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="메뉴 목록"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/shape">
        </Button>
        <Button
            android:id="@+id/btn2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="매장 위치"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/shape">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:name="high.co.kr.project.MenuListFragment"
        android:id="@+id/menu_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.96"
        android:orientation="horizontal"
        android:background="#FFFFFF"/>

</LinearLayout>